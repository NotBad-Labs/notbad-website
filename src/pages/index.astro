---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'NotBad Labs | AI-Native Software Studio',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Explore Our Work',
        href: '#works',
      },
      { text: 'Get in Touch', href: 'mailto:hello@notbadhq.com' },
    ]}
    image={{ src: '~/assets/images/notbad_hero.png', alt: 'NotBad Labs Neural Engine' }}
  >
    <Fragment slot="title">
      Constructing the <span class="text-accent dark:text-white highlight">Digital Future</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="font-semibold">A humble name with bold ideas.</span> We harness the power of AI to build thoughtful, beautifully crafted tools that genuinely improve everyday life.
    </Fragment>
  </Hero>

  <!-- About Us (Content Widget) **************** -->

  <Content
    id="about"
    isReversed
    tagline="Company Identity"
    title="NotBad Labs"
    items={[
      {
        title: 'Digital Craftsmen',
        description:
          'From architectural design to pixel-perfect UI execution, our team applies rigorous engineering principles to digital products.',
      },
      {
        title: 'AI Native',
        description:
          'We leverage on-device CoreML and edge deployments to provide privacy-first, lightning-fast intelligent features.',
      },
       {
        title: 'Built in Wyoming',
        description:
          'A proud LLC registered in Wyoming, maintaining modern legal standards for global software distribution.',
      },
    ]}
    image={{
      src: '~/assets/images/snapdrill_concept.png',
      alt: 'SnapDrill Apple Style Mockup',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Our Philosophy</h3>
      We believe that technology should empower, not extract.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>


  <!-- Project Showcase (Features Widget) *************** -->

  <Features
    id="works"
    tagline="Selected Works"
    title="What we are building"
    subtitle="Our current focus is on delivering high-quality, AI-powered applications directly to your devices."
    items={[
      {
        title: 'SnapDrill (In Development)',
        description:
          'Snap your mistakes. Drill them right. A smart study companion for K-12 students. Simply snap a photo of any wrong answer, and the app uses on-device AI to organize it for scientifically-proven spaced repetition.',
        icon: 'tabler:camera',
      },
      {
        title: 'On-Device OCR',
        description:
          'Powered by Apple Vision framework for instant, offline text extraction.',
        icon: 'tabler:scan',
      },
      {
        title: 'Privacy-First Architecture',
        description:
          'No cloud processing, no data leaving your iPhone. Your study data stays secure.',
        icon: 'tabler:lock',
      },
      {
        title: 'Spaced Repetition',
        description:
          'Built-in scheduling algorithms to turn mistakes into long-term strengths.',
        icon: 'tabler:brain',
      },
    ]}
  />

</Layout>
